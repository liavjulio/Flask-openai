# GPT Clone - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ========================
# OpenAI API Configuration
# ========================
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ========================
# Database Configuration
# ========================
# SQLite database file path (relative to project root)
DATABASE_URL=sqlite:///gpt_clone.db

# For PostgreSQL (if using):
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# ========================
# Flask Configuration
# ========================
# Server host (127.0.0.1 for local development)
FLASK_HOST=127.0.0.1

# Server port (5001 to avoid conflicts with macOS AirPlay)
FLASK_PORT=5001

# Debug mode (True for development, False for production)
FLASK_DEBUG=True

# Flask environment
FLASK_ENV=development

# ========================
# Development Configuration
# ========================
# Mock Mode: Set to 'true' to use mock responses when API quota is exceeded
# This allows testing without consuming OpenAI credits
MOCK_MODE=false
